# Vercel Environment Variables
# Copy these values to Vercel Dashboard → Settings → Environment Variables

# ===================
# Security (REQUIRED)
# ===================

# PIN for Teaching System access
# IMPORTANT: Choose a secure PIN (4+ digits). DO NOT use 1234.
ADMIN_PIN=CHANGE_THIS_TO_YOUR_SECURE_PIN

# Encryption key for API keys at rest
# Generated: 739ef6bbbd37c62628632a78a17f770093fc632387a0f5307c4a04aa1bec861e
ENCRYPTION_KEY=739ef6bbbd37c62628632a78a17f770093fc632387a0f5307c4a04aa1bec861e

# ===================
# Database (REQUIRED)
# ===================

# Get these from Turso dashboard: https://turso.tech/app
TURSO_DATABASE_URL=libsql://YOUR-DATABASE.turso.io
TURSO_AUTH_TOKEN=YOUR_TURSO_AUTH_TOKEN

# ===================
# Application (REQUIRED)
# ===================

# Your Vercel production URL (update after first deploy)
NEXT_PUBLIC_APP_URL=https://YOUR-APP-NAME.vercel.app
INTERNAL_API_URL=https://YOUR-APP-NAME.vercel.app

# ===================
# Optional
# ===================

# Claude AI (already configured, no changes needed)
CLAUDE_CLI_ENABLED=true

# Basecamp (optional)
# BASECAMP_ACCOUNT_ID=
# BASECAMP_OAUTH_TOKEN=

# Bricks Builder (optional)
# BRICKS_API_KEY=

# Debug (development only)
# DEBUG_CLAUDE=true
