# Vercel Environment Variables
# Copy these values to Vercel Dashboard → Settings → Environment Variables

# ===================
# Security (REQUIRED)
# ===================

# PIN for Teaching System access
# IMPORTANT: Choose a secure PIN (4+ digits). DO NOT use 1234.
ADMIN_PIN=CHANGE_THIS_TO_YOUR_SECURE_PIN

# Encryption key for API keys at rest (64 hex characters)
# Generate with: openssl rand -hex 32
# IMPORTANT: Generate your own unique key. DO NOT use example values.
ENCRYPTION_KEY=GENERATE_YOUR_OWN_KEY_WITH_OPENSSL_RAND_HEX_32

# Database setup token (one-time use for /api/setup-database)
# Set this temporarily, run the setup endpoint, then REMOVE it
# Can be any random string or your ADMIN_PIN
DB_SETUP_TOKEN=YOUR_SETUP_TOKEN_HERE

# ===================
# Database (REQUIRED)
# ===================

# Get these from Turso dashboard: https://turso.tech/app
TURSO_DATABASE_URL=libsql://YOUR-DATABASE.turso.io
TURSO_AUTH_TOKEN=YOUR_TURSO_AUTH_TOKEN

# ===================
# Application (REQUIRED)
# ===================

# Your Vercel production URL (update after first deploy)
NEXT_PUBLIC_APP_URL=https://bricks.jbcloud.app
INTERNAL_API_URL=https://bricks.jbcloud.app

# ===================
# Optional
# ===================

# Claude AI (already configured, no changes needed)
CLAUDE_CLI_ENABLED=true

# Basecamp (optional)
# BASECAMP_ACCOUNT_ID=
# BASECAMP_OAUTH_TOKEN=

# Bricks Builder (optional)
# BRICKS_API_KEY=

# Debug (development only)
# DEBUG_CLAUDE=true
